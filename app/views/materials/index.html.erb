<h1>Listing materials</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Buy</th>
    <th>Sell</th>
    <th>Store</th>
    <th>Exp</th>
    <th>Multiplier</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @materials.each do |material| %>
  <tr>
    <td><%= material.name %></td>
    <td><%= material.buy %></td>
    <td><%= material.sell %></td>
    <td><%= material.store %></td>
    <td><%= material.exp %></td>
    <td><%= material.multiplier %></td>
    <td><%= link_to 'Show', material %></td>
    <td><%= link_to 'Edit', edit_material_path(material) %></td>
    <td><%= link_to 'Destroy', material, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

